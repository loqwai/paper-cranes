{
  "name": "paper-cranes-shader-syntax",
  "version": "1.0.0",
  "publisher": "hypnodroid",
  "repository": "https://github.com/hypnodroid/paper-cranes",
  "displayName": "Paper Cranes Shader Syntax",
  "description": "Language support for Paper Cranes audio visualization shaders",
  "main": "./out/extension.js",
  "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "package": "vsce package",
      "build": "npm run compile && npm run package"
  },
    "engines": {
        "vscode": "^1.93.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "glsl",
            "aliases": ["GLSL", "glsl"],
            "extensions": [".frag", ".vert", ".glsl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "glsl",
            "scopeName": "source.glsl",
            "path": "./syntaxes/glsl.tmLanguage.json"
        }]
    },
    "devDependencies": {
        "@types/node": "^22.x",
        "@types/vscode": "^1.93.1",
        "typescript": "^5.x",
        "@vscode/vsce": "^32.x"
    }
}
