{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/../shaders/glassy-field.frag"
      ],
      "env": {
        "VSCODE_DEBUG_MODE": "true",
        "VSCODE_EXTENSIONS": "${workspaceFolder}"
      },
      "outFiles": [
        "${workspaceFolder}/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    }
  ]
}
